@using Company.WebUI.Common
@model IEnumerable<Company.WebUI.Areas.Admin.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var session = Session[CommonConstants.USER_SESSION] as UserLogin;
}

<div class="row">
    <div class="col-lg-12 col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <h5 class="card-header">Bảng nhân viên</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BirthDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserGroupID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EquipmentID)
                                </th>
                                @if (session.UserGroupID.Equals(CommonConstants.ADMIN_GROUP))
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.Username
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.BirthDate
                                </td>
                                <td>
                                    @item.Address
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.UserGroupID
                                </td>
                                <td>
                                    @item.EquipmentID
                                </td>
                                @if (session.UserGroupID.Equals(CommonConstants.ADMIN_GROUP))
                                {
                                    <td>
                                        <a class="btn btn-secondary" href="@Url.Action("Edit", new { ID = item.EmployeeID })">Edit</a> |
                                        <a class="btn btn-secondary" href="@Url.Action("Edit", new { ID = item.EmployeeID })">Delete</a>
                                    </td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

