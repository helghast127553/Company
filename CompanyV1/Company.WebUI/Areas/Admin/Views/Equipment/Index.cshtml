@using Company.WebUI.Common
@model IEnumerable<Company.WebUI.Areas.Admin.Models.EquipmentViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var session = Session[CommonConstants.USER_SESSION] as UserLogin;
}

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Equipment")">Create</a>
</p>
<div class="row">
    <div class="col-lg-12 col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <h5 class="card-header">Bảng thiết bị</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryID)
                                </th>
                                @if (session.UserGroupID.Equals(CommonConstants.ADMIN_GROUP))
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @HttpUtility.HtmlDecode(item.Description)
                                </td>
                                <td>
                                    <a href="#" class="btn-active" data-id="@item.EquipmentID">
                                        @Html.Raw(item.Status.Value ? "<strong>Sẵn sàng</strong>" : "<strong>Chưa sẵn sàng</strong>")
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryID)
                                </td>
                                @if (session.UserGroupID.Equals(CommonConstants.ADMIN_GROUP))
                                {
                                    <td>
                                        <a class="btn btn-secondary" href="@Url.Action("Edit", new { ID = item.EquipmentID })">Edit</a> |
                                        <a class="btn btn-secondary" href="@Url.Action("Delete", new { ID = item.EquipmentID })">Delete</a>
                                    </td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section jsFooter{
    <script src="~/Assets/Admin/AdminScript/EquipmentController.js"></script>
}
